<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include("../_head.ejs") %>
</head>

<body>
<header id="header">
  <%- include("../_header.ejs", {ActivateTab: 0}) %>
</header>

<main>
  <div class="m-header">
    <div class="m-header-wallpaper">
      <h1>Make the world tremendous</h1>
      <a href="#intro">Get Started</a>
    </div>
  </div>
  <!-- #intro -->
  <section class="m-sections" id="intro">
    <h2>INTRODUCE</h2>
    <hr>
    <p class="description" id="desc01">introduce text</p>
  </section>
  <!-- #highlights -->
  <section class="m-sections" id="highlights">
    <h2>NEW ARRIVALS</h2>
    <hr>
    <div class="img-list" id="div_newarrival_img">
      <% NewArrivals.forEach(item => { %>
        <a href="/goods?item=<%= item.id %>">
          <img src="/goods/<%= item.file %>">
          <p>
            <span class="lang_ja"><%= item.description %></span>
            <span class="lang_en"><%= item.description %></span>
          </p>
          <span class="price"><%= item.price %></span>
        </a>
      <% }); %>
    </div>
    <button type="button" id="readmore_elem" class="more_btn" onclick="location.href='/goods/sort/newarrivals'">Watch
      more</button>
  </section>
  <section class="m-sections" id="highlights">
    <h2>LANKING</h2>
    <hr>
    <div class="img-list" id="div_lanking_img">
      <% Lanking.forEach(item => { %>
        <a href="/goods?item=<%= item.id %>">
          <img src="/goods/<%= item.file %>">
          <p>
            <span class="lang_ja"><%= item.description %></span>
            <span class="lang_en"><%= item.description %></span>
          </p>
          <span class="price"><%= item.price %></span>
        </a>
      <% }); %>
    </div>
    <button type="button" id="readmore_elem" class="more_btn" onclick="location.href='/goods/sort/lanking'">Watch
      more</button>
  </section>
</main>
<footer id="footer">
  <%- include("../_footer.ejs") %>
</footer>
<div id="page_top"><a href="#header"></a></div>
<script src="/js/main.js"></script>
</body>

</html>